<%- include('../partial/head') %>
  </head>

  <body>

    <%- include('../partial/navbar') %>

      <main>
        <h1 class="text-3xl font-bold text-center text-red-500 my-5">Welcome To Home Host</h1>
      </main>

      <div class="flex flex-wrap justify-evenly gap-5 md:gap-2">
        <% homeDetails.forEach((data)=>{ %>
          <div class="w-5/12 sm:w-5/12 md:w-4/12 lg:w-2/12 flex flex-col relative my-5">
            <img class="w-[100%] h-[220px] shadow-lg rounded-lg object-cover" src="<%= data.image %>" alt="">
            <button class="bg-white absolute top-2 rounded-lg px-2 start-2 cursor-pointer">Guest favourite</button>
            <i
              class="bi bi-heart absolute end-2 top-2 text-2xl text-white hover:scale-[1.2] transition-all duration-500"></i>
            <div class="flex flex-col">
              <span class="font-bold text-md">
                <%= data.housename %>
              </span>
              <span class="text-gray-500">
                <%= data.location %>
              </span>
              <div class="flex gap-2 text-gray-500">
                <span>₹<%= data.price %> per night</span>
                <span>• ⭐ <%= data.rating %></span>
              </div>
              <div class="flex gap-1">
                <a href="/host/edit-home/<%= data.id %>?editing=true"
                  class="border text-blue-500 my-1 hover:bg-blue-500 hover:text-white rounded-sm border-blue-500 py-1 px-3">Edit</a>
                <form action="/host/delete-home/<%= data.id %>" method="post">
                  <button type="submit"
                    class="border text-red-500 my-1 hover:bg-red-500 hover:text-white rounded-sm border-red-500 py-1 px-3">Delete</button>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
      </div>


  </body>

  </html>