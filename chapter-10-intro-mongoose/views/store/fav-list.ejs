<%- include('../partial/head') %>
  </head>

  <body>

    <%- include('../partial/navbar') %>

      <main>
        <h1 class="text-3xl font-bold text-center text-red-500 my-5">Here is your favourite Airbnb Home</h1>

        <div class="flex flex-wrap justify-evenly gap-5 md:gap-2">
          <% homeDetails.forEach((data)=>{ %>
            <div class="w-5/12 sm:w-5/12 md:w-4/12 lg:w-2/12 flex flex-col relative my-5">
              <img class="w-[100%] h-[220px] shadow-lg rounded-lg object-cover" src="<%= data.image %>" alt="">
              <button class="bg-white absolute top-2 rounded-lg px-2 start-2 cursor-pointer">Guest favourite</button>
              <form action="/delete-fav/<%= data._id %>">
                <button type="submit"
                  class="bi bi-trash3-fill absolute end-2 top-2 text-2xl text-red-500 hover:scale-[1.2] transition-all duration-500">
                </button>
              </form>
              <div class="flex flex-col">
                <span class="font-bold text-md">
                  <%= data.houseName %>
                </span>
                <span class="text-gray-500">
                  <%= data.location %>
                </span>
                <div class="flex gap-2 text-gray-500">
                  <span>₹<%= data.price %> per night</span>
                  <span>• ⭐ <%= data.rating %></span>
                </div>
              </div>
            </div>
            <% }) %>
        </div>

      </main>



  </body>

  </html>