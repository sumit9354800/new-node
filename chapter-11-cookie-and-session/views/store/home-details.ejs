<%- include('../partial/head') %>
  </head>

  <body>

    <%- include('../partial/navbar') %>

      <main class="my-5">
        <h1 class="text-5xl font-bold text-center text-red-500 my-5">
          Home Details <%= homeData.houseName %>
        </h1>
        <div class="my-5 w-full flex justify-center">
          <div class="w-[90%] flex justify-center">
            <div
              class="flex w-10/12 max-md:6/12 p-5 gap-5 flex-col items-center bg-white border border-gray-200 rounded-lg shadow-sm md:flex-row hover:bg-gray-100">
              <div class="w-5/12 max-sm:12/12">
                <img
                  class="object-cover w-full rounded-t-lg h-full md:h-[350px] md:w-[100%] md:rounded-none md:rounded-s-lg"
                  src="<%= homeData.image %>" alt="">
              </div>
              <div class="flex flex-col justify-between w-7/12 max-sm:12/12 max-md:6/12">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-700">
                  Home Name:
                </h5>
                <h5 class="mb-2 text-xl tracking-tight text-gray-900 dark:text-black">
                  <%= homeData.houseName %>
                </h5>
                <hr class="text-gray-400 border-1">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-700">
                  Location:
                </h5>
                <h5 class="mb-2 text-xl tracking-tight text-gray-900 dark:text-black">
                  <%= homeData.location %>
                </h5>
                <hr class="text-gray-400 border-1">
                <p class="my-3 font-normal text-green-700 dark:text-green-700">
                  <b class="text-xl">Home price:</b><br> ₹<%= homeData.price %>/ per night
                </p>
                <hr class="text-gray-400 border-1">
                <h2 class="text-xl font-bold mt-3 text-gray-700">Discription:</h2>
                <p class="text-gray-600 mb-3">
                  <%= homeData.description %>
                </p>
                <hr class="text-gray-400 border-1">
                <p class="my-3 font-normal text-gray-700 dark:text-gray-700">
                  <b class="text-xl"> Rating:</b><br> ⭐<%= homeData.rating %> /5.5
                </p>
                <%- include('../partial/fav') %>
              </div>
            </div>
          </div>
        </div>
      </main>



  </body>

  </html>